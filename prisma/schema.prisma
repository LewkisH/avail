// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

// Core Models

model User {
  id        String   @id // Clerk user ID
  email     String   @unique
  name      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  interests                  UserInterest[]
  budget                     UserBudget?
  sleepTime                  UserSleepTime?
  ownedGroups                Group[]                        @relation("GroupOwner")
  groupMemberships           GroupMember[]
  sentInvitations            GroupInvitation[]              @relation("InvitationSender")
  calendarEvents             CalendarEvent[]
  googleToken                GoogleCalendarToken?
  availabilityParticipations GroupAvailabilityParticipant[]
}

model UserInterest {
  id        String   @id @default(uuid())
  userId    String
  interest  String
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model UserBudget {
  id        String   @id @default(uuid())
  userId    String   @unique
  minBudget Decimal  @db.Decimal(10, 2)
  maxBudget Decimal  @db.Decimal(10, 2)
  currency  String   @default("EUR")
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model UserSleepTime {
  id        String   @id @default(uuid())
  userId    String   @unique
  startTime String // Format: "HH:MM" (e.g., "22:00")
  endTime   String // Format: "HH:MM" (e.g., "08:00")
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Group {
  id        String   @id @default(uuid())
  name      String
  ownerId   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  owner               User                 @relation("GroupOwner", fields: [ownerId], references: [id], onDelete: Cascade)
  members             GroupMember[]
  invitations         GroupInvitation[]
  activitySuggestions ActivitySuggestion[]
  availabilities      GroupAvailability[]

  @@index([ownerId])
}

model GroupMember {
  id       String   @id @default(uuid())
  groupId  String
  userId   String
  joinedAt DateTime @default(now())

  group Group @relation(fields: [groupId], references: [id], onDelete: Cascade)
  user  User  @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([groupId, userId])
  @@index([groupId])
  @@index([userId])
}

enum InvitationStatus {
  pending
  accepted
  declined
}

model GroupInvitation {
  id           String           @id @default(uuid())
  groupId      String
  invitedEmail String
  invitedBy    String
  status       InvitationStatus @default(pending)
  token        String           @unique @default(uuid())
  createdAt    DateTime         @default(now())
  expiresAt    DateTime

  group   Group @relation(fields: [groupId], references: [id], onDelete: Cascade)
  inviter User  @relation("InvitationSender", fields: [invitedBy], references: [id], onDelete: Cascade)

  @@index([groupId])
  @@index([token])
}

// Calendar and Event Models

enum EventSource {
  google
  ics
  manual
}

model CalendarEvent {
  id          String      @id @default(uuid())
  userId      String
  title       String
  description String?     @db.Text
  startTime   DateTime
  endTime     DateTime
  timezone    String
  location    String?
  source      EventSource
  sourceId    String?
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, startTime])
  @@index([userId])
}

model GoogleCalendarToken {
  id           String   @id @default(uuid())
  userId       String   @unique
  accessToken  String   @db.Text
  refreshToken String   @db.Text
  expiresAt    DateTime
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model ExternalEvent {
  id          String   @id @default(uuid())
  title       String
  description String   @db.Text
  startTime   DateTime
  endTime     DateTime
  timezone    String
  location    String?
  cost        Decimal? @db.Decimal(10, 2)
  currency    String   @default("EUR")
  category    String
  sourceApi   String
  sourceId    String
  sourceUrl   String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  activitySuggestions ActivitySuggestion[]

  @@unique([sourceApi, sourceId])
  @@index([category])
  @@index([startTime])
}

model ActivitySuggestion {
  id              String   @id @default(uuid())
  groupId         String
  externalEventId String?
  title           String
  description     String   @db.Text
  suggestedTime   DateTime
  cost            Decimal? @db.Decimal(10, 2)
  reasoning       String   @db.Text
  createdAt       DateTime @default(now())

  group         Group          @relation(fields: [groupId], references: [id], onDelete: Cascade)
  externalEvent ExternalEvent? @relation(fields: [externalEventId], references: [id], onDelete: SetNull)

  @@index([groupId])
  @@index([suggestedTime])
}

// Group Availability Models

model GroupAvailability {
  id        String   @id @default(uuid())
  groupId   String
  date      DateTime @db.Date
  startTime DateTime
  endTime   DateTime
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  group        Group                          @relation(fields: [groupId], references: [id], onDelete: Cascade)
  participants GroupAvailabilityParticipant[]

  @@index([groupId, date])
  @@index([date])
}

model GroupAvailabilityParticipant {
  id                  String @id @default(uuid())
  groupAvailabilityId String
  userId              String

  groupAvailability GroupAvailability @relation(fields: [groupAvailabilityId], references: [id], onDelete: Cascade)
  user              User              @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([groupAvailabilityId, userId])
  @@index([groupAvailabilityId])
  @@index([userId])
}
